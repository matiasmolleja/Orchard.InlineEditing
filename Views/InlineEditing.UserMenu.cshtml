@using System.Web.Mvc;
@if (WorkContext.CurrentUser != null)
{
    <div id="inline-user" data-bind="visible:!isCollapsed()">
        @* We use nav here instead of a div because of a unwanted behavior in dropit *@
        <nav>
            <a href="#"><i class="icon-user"></i>@Html.ItemDisplayText(WorkContext.CurrentUser)</a>
            <ul>
                <li>@Html.ActionLink(T("Sign Out").ToString(), "LogOff", new { Controller = "Account", Area = "Orchard.Users", ReturnUrl = Context.Request.RawUrl }, new { rel = "nofollow" })</li>
            </ul>
        </nav>
    </div>
}



